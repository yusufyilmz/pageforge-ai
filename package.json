{
  "author": "Yusuf Yilmaz",
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.1",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.8",
    "camelcase-keys": "^9.1.3",
    "classnames": "^2.5.1",
    "compressorjs": "^1.2.1",
    "date-fns": "^4.1.0",
    "next": "^15.3.3",
    "openai": "^5.0.1",
    "postcss": "^8.4.39",
    "postcss-preset-env": "^9.5.15",
    "prismjs": "^1.30.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "^5.2.1",
    "react-masonry-css": "^1.0.16",
    "recharts": "^2.15.1",
    "sass": "^1.77.6",
    "sharp": "^0.33.4",
    "snakecase-keys": "^8.0.1"
  },
  "description": "ğŸš€ PageForge - Revolutionary Next.js Page Builder System with 98% code reduction and AI-powered generation",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@csstools/postcss-global-data": "^2.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.17.23",
    "@types/prismjs": "^1.26.5",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@vitejs/plugin-react": "^4.5.1",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss-custom-media": "^10.0.7",
    "postcss-flexbugs-fixes": "^5.0.2",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "pagebuilder",
    "ai",
    "supabase",
    "once-ui",
    "template",
    "website-builder"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": ["biome check --write --no-errors-on-unmatched"],
    "*.{md,css,scss,yml,yaml}": ["biome format --write --no-errors-on-unmatched"]
  },
  "name": "pageforge",
  "overrides": {
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yusufyilmz/pageforge-ai.git"
  },
  "scripts": {
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser npm run build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server npm run build",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "build": "next build",
    "clean": "rm -rf .next out dist build coverage .turbo",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "code-quality": "npm run type-check && npm run lint && npm run format:check",
    "code-quality:fix": "npm run type-check && npm run lint:fix && npm run format:fix",
    "deploy": "npm run build && npm run export",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack --port 3001",
    "export": "next export",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "format:ci": "npx @biomejs/biome format .",
    "format:fix": "npx @biomejs/biome format --write .",
    "git-workflow": "./scripts/git-workflow.sh",
    "lint": "npx @biomejs/biome lint .",
    "lint:ci": "npx @biomejs/biome lint --max-diagnostics=50 .",
    "lint:errors": "npx @biomejs/biome lint --diagnostic-level=error .",
    "lint:errors:fix": "npx @biomejs/biome lint --write --diagnostic-level=error .",
    "lint:fix": "npx @biomejs/biome lint --write .",
    "merge": "git checkout main && git pull origin main && git merge develop && git push origin main",
    "merge-to-main": "./scripts/merge-to-main.sh",
    "outdated": "npm outdated",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "quick-merge": "./scripts/quick-merge.sh",
    "reset": "npm run clean:all && npm install",
    "setup-branch-protection": "./scripts/setup-branch-protection.sh",
    "start": "next start",
    "supabase:gen-types": "supabase gen types typescript --local > src/lib/supabase/types.ts",
    "supabase:reset": "supabase db reset",
    "supabase:start": "supabase start",
    "supabase:status": "supabase status",
    "supabase:stop": "supabase stop",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:watch": "tsc --noEmit --skipLibCheck --watch",
    "update:deps": "npm update"
  },
  "version": "1.0.0"
}
