{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      ".next/**",
      "node_modules/**",
      "dist/**",
      "build/**",
      "out/**",
      ".vercel/**",
      ".turbo/**",
      "coverage/**",
      "*.config.js",
      "*.config.mjs",
      "public/**",
      "supabase/migrations/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noUselessTypeConstraint": "off",
        "noUselessSwitchCase": "off",
        "noUselessCatch": "off",
        "noThisInStatic": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnsafeOptionalChaining": "off",
        "useExhaustiveDependencies": "off"
      },
      "a11y": {
        "noAriaUnsupportedElements": "off",
        "useSemanticElements": "off",
        "useKeyWithMouseEvents": "off",
        "useKeyWithClickEvents": "off"
      }
    },
    "ignore": [
      "noConsole",
      "noDebugger",
      "noEmpty",
      "noUnreachable",
      "noUnusedVariables",
      "noUnusedLabels"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  }
}
