{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@pageforge/components/*": ["./src/components/*"],
      "@pageforge/hooks/*": ["./src/hooks/*"],
      "@pageforge/lib/*": ["./src/lib/*"],
      "@pageforge/once-ui/*": ["./src/once-ui/*"],
      "@pageforge/pages/*": ["./src/pages/*"],
      "@pageforge/types/*": ["./src/lib/types/*"],
      "@pageforge/ui/*": ["./src/ui/*"],
      "@pageforge/utils/*": ["./src/utils/*"],
      "@pageforge/contexts/*": ["./src/contexts/*"],
      "@pageforge/test/*": ["./src/test/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "unused/pageold/generatePage.ts",
    "unused",
    "unused/**/**.ts",
    "unused/**/*.ts",
    "unused/**/*.tsx",
    "unused/*.ts",
    "unused/*.tsx"
  ],
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"]
}
